<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">


	<TextView android:id="@+id/textView2" android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="Identificação" android:layout_gravity="center_vertical">
	</TextView>
	
	<EditText 
		android:id="@+campo/editIdent" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<requestFocus></requestFocus>
	</EditText>
	<TextView 
		android:id="@+id/textView3" 
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:text="Origem">
	</TextView>
	
	<Spinner 
		android:id="@+combo/spinOrig" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
	</Spinner>
	
	<TextView 
		android:id="@+id/textView4" 
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:text="Destinos">
	</TextView>
	
	<TextView android:id="@+campo/editDest" 
		android:textAppearance="?android:attr/textAppearanceMedium" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:text="">
	</TextView>
	<LinearLayout 
		android:id="@+id/linearLayout1" 
		android:baselineAligned="false" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:orientation="horizontal">
		<ImageButton 
			android:src="@android:drawable/ic_menu_revert" 
			android:layout_weight="1" 
			android:layout_width="wrap_content" 
			android:id="@+btn/voltarmain" 
			android:layout_height="wrap_content">
		</ImageButton>
		<ImageButton 
			android:src="@android:drawable/ic_menu_agenda" 
			android:layout_weight="1" 
			android:layout_width="wrap_content" 
			android:tint="#006600" 
			android:id="@+btn/confirm" 
			android:layout_height="wrap_content">
		</ImageButton>
	</LinearLayout>

</LinearLayout>
